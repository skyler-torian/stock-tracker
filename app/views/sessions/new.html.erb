<span class='banner'>
    <div class='app-name'>
        <h1>Stock Trackr</h1>
    </div>
</span>


<div class="wrapper">
    <h3>Dont have an account? <%=link_to "signup", new_user_path%></h3>
    <% if flash[:notice] %>
        <div class="error"><%= flash.notice %></div>
    <% end %>
  
  <div class="ui form">
    <div class= "field">
    <%= form_tag "/login" do %>
        <%= label :username, "username"%>
        <%= text_field_tag :username%>
        </div>
    <div class= "field">
        <%= label :password, "password"%>
        <%= password_field_tag :password%>
        </div>
        <button class="ui button green" type="submit">Login</button>
       </div> 
    <% end %>
</div>